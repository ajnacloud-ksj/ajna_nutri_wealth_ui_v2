FROM node:20-alpine

# Set working directory
WORKDIR /app
#ddd
# Copy package files
COPY package.json ./
COPY bun.lockb ./

# Install dependencies
# Using npm for Docker (bun has compatibility issues in some Docker environments)
RUN npm install

# Copy source code (actual source is mounted as volume for hot reload)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
